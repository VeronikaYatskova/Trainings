@page
@model RegisterModel

<div id="logreg-forms">
    <h1 class="h3 mb-3 pt-4 font-weight-normal" style="text-align:center; color:purple">Register</h1>
    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
        <div>
            <p>
                <a class="btn btn-info" asp-action="GoogleLogin">Log In With Google</a>
            </p>
        </div>
    </form>

    <form id="account" method="post">
        <p style="text-align:center">OR</p>
        <input asp-for="Input.Email" placeholder="Email..." type="email" class="mb-1 form-control" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>

        <input asp-for="Input.Password" placeholder="Password..." type="password" class="mb-1 form-control" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>

        <input asp-for="Input.ConfirmPassword" placeholder="Confirm Password" type="password" class="mb-1 form-control" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

        <button id="registerSubmit" type="submit" class="w-100 custom-button">Register</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
