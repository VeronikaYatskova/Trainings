@using Trainings.Services

@inject LanguageService language

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trainings</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Trainings.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/fontawesome/css/all.css" />
</head>
<body>
    <header>
        <div class="container d-flex justify-content-between align-items-center">
            <div class="logo">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-graduation-cap"></i>
                </a>
            </div>
            <nav class="header-nav">
                <a class="nav-link text-dark" asp-area="" asp-controller="#" asp-action="Index">@language.GetKey("Trainings")</a>
                <a class="nav-link text-dark" asp-area="" asp-controller="#" asp-action="Index">@language.GetKey("About Us")</a>
                <a class="nav-link text-dark" asp-area="" asp-controller="#" asp-action="Index">@language.GetKey("Technologies")</a>
            </nav>
            <div class="language">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="ru-RU">RU</a>
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="en-US">EN</a>
            </div>
            @*@if (User.Identity.IsAuthenticated)
            {
                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout" asp-route-culture="ru-RU">Logout</a>
            }
            else
            {
                <div class="logo">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">
                        <i class="fa-solid fa-right-to-bracket"></i>
                    </a>
                </div>
            }*@
            <partial name="_LoginPartial"/>
        </div>
    </header>
    <div id="main">
        <section class="standart-section">
            <div class="row d-flex">
                @RenderBody()
            </div>
        </section>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Trainings - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

