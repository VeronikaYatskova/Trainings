@model Trainings.Models.Response.TrainingModel

<div class="col-lg-4 col-md-6 pb-4">
    <div class="card bg-white rounded shadow-sm" style="border:1px solid #222">
    <div class="card-body px-3 pt-3 pb-1 row">
        <div class="col-7"><label class="float-left">@Model.Name</label></div>
    </div>
        <img class="card-img-top img-fluid d-block mb-3" src="@WebConstants.ImagePath@Model.Image" alt="Card image cap">
        <div class="card-body p-1 px-3 row">
        <div class="col-6">
            <span class="badge p-2 border w-100" style="background-color:lavenderblush">@Model.TechnologyName</span>
        </div>
        <div class="col-12 p-1">
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-dark form-control btn-sm p-2" style="height:40px">Регистрация</a>
        </div>
    </div>
    </div>
</div>
